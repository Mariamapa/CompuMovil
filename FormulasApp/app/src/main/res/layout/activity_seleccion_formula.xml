<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_libreta"
    android:fillViewport="true"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:paddingTop="100dp">

        <!-- TÃ­tulo -->

        <!-- GIF -->

        <TextView
            android:id="@+id/tvTituloSeleccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/gifView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="32dp" />

        <!-- Botones -->
        <Button
            android:id="@+id/btnTriangulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titulo_area"
            android:backgroundTint="@color/purple_700"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnVelocidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titulo_velocidad"
            android:backgroundTint="@color/purple_700"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnCuadratica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titulo_cuadratica"
            android:backgroundTint="@color/purple_700"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnOhm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_700"
            android:text="@string/titulo_ohm"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
